{
	"compilerOptions": {
		"baseUrl": "./src/",
		"outDir": "lib/esm",
		"module": "esnext",
		"target": "es5",
		"lib": [
			"es6",
			"dom",
			"es2016",
			"es2017"
		],
		"jsx": "react-jsx",
		"declaration": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"./src/icons"
	],
	"exclude": [
		"./node_modules",
		"./lib"
	]
}